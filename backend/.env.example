# App Configuration
APP_NAME=Asasy
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
MONGODB_URL=mongodb://admin:password123@localhost:27017/asasy?authSource=admin
DATABASE_NAME=asasy

# Redis
REDIS_URL=redis://redis123@localhost:6379

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# msg91 SMS/Email Service
MSG91_API_KEY=your-msg91-api-key
MSG91_TEMPLATE_ID=your-msg91-template-id
MSG91_SENDER_ID=ASASY

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]
ALLOWED_HOSTS=["localhost","yourdomain.com"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["pdf","docx","txt"]

# Report Settings
REPORTS_STORAGE_PATH=reports
MAX_REPORTS_FREE_USERS=1